@model BKind.Models.Manage.DeletePersonalData
@{
    ViewData["Title"] = "Șterge date personale";
    ViewData["ActivePage"] = BKind.Models.Manage.ManageNavPages.PersonalData;

    var RequirePassword = (bool)ViewData["RequirePassword"];
}

<h4>@ViewData["Title"]</h4>

<div class="alert alert-warning" role="alert">
    <p>
        <span class="glyphicon glyphicon-warning-sign"></span>
        <strong>Eliminarea acestor date va șterge permanent contul tău, fără a mai putea fi recuperat.</strong>
    </p>
</div>

<div>
    <form asp-action="DeletePersonalData" id="delete-user" method="post" class="form-group">
        <div asp-validation-summary="All" class="text-danger"></div>
        @if (RequirePassword)
        {
            <div class="form-group">
                <label asp-for="Password">Parola</label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        }
        <button class="btn btn-danger" type="submit">Ștergere date și închidere cont</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}