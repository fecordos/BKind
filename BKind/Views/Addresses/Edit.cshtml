@model BKind.Models.Address

@{
    ViewData["Title"] = "Modifică";
}


<h4>Modifică această adresă</h4>

<div>
    <a asp-action="Index" class="btn btn-lg btn-sm btn-outline-dark" style="margin-top:10px; margin-bottom:15px;">
        <i class="fa fa-arrow-circle-left" aria-hidden="true"></i>
        Lista adreselor
    </a>
</div>

<hr />
<div class="row">
    <div class="col-md-7">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="Street" class="control-label"><b>Strada*:</b></label>
                <input asp-for="Street" class="form-control" />
                <span asp-validation-for="Street" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Number" class="control-label"><b>Număr*:</b></label>
                <input asp-for="Number" class="form-control" />
                <span asp-validation-for="Number" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="City" class="control-label"><b>Oraș*:</b></label>
                <input asp-for="City" class="form-control" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvează" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
