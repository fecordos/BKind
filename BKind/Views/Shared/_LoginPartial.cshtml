@using Microsoft.AspNetCore.Identity
@using BKind.Models
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager


<link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">


<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {

        <li>
            <form asp-controller="Requests" asp-action="Index" class="form-inline" style="margin-right:150px;margin-top:10px;">
                <p>
                    <input class="form-control mr-sm-0" type="search" aria-label="Search" name="SearchString" placeholder="Caută cereri...">
                    <input value="Caută" type="submit" class="btn btn-sm btn-outline-dark mr-sm-0" />
                </p>
            </form>
        </li>





        <li class="nav-item flex-grow-1">
            <a class="nav-link text-dark" asp-controller="Requests" asp-action="Index">
                <i class="fa fa-home fa-2x" style="margin-right:20px"></i>
            </a>
        </li>


        <li class="nav-item flex-grow-1">
            <a class="nav-link text-dark" asp-controller="ReqHistory" asp-action="Index">
                <i class="fa fa-list-alt fa-2x" style="margin-right:20px; margin-top:2px;" ></i>
            </a>
        </li>

        <li class="nav-item flex-grow-1">
            <a class="nav-link text-dark" asp-controller="Chat" asp-action="Index">
                <i class="fa fa-envelope-o fa-2x" style="margin-right:50px" ></i>
            </a>
        </li>

        <li class="nav-item">
            <form class="form-inline" asp-controller="Account" asp-action="Logout" method="post" asp-route-returnUrl="@Url.Action("Login", "Account", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-dark">
                    <i class="fa fa-sign-out fa-2x" style="margin-left:60px"></i>
                </button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Register">Înregistrează-te</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Account" asp-action="Login">Autentifică-te</a>
        </li>
    }
</ul>
